<div class="card">
  <div class="card-content">
    <h3 class="indigo-text text-darken4"><%= @user.username %></h3>
    <% if @user.avatar.attached? %>
      <%= image_tag url_for(@user.avatar), class: "thumbnail" %>
    <% end %>
    <p><strong>Joined: <%= @user.created_at.strftime("%B %d, %Y") %></strong></p>
    <br />
    <% if current_user == @user %>
      <%= link_to "Edit Profile", edit_user_path(current_user) %>
    <% end %>
  </div>
</div>