<div class="card">
  <div class="card-content">
    <h4 class="indigo-text darken-4"><%= header %></h4>
    <%= form_for post, url: url do |f| %>
      <% if flash[:notice] %>
        <div class="red-text center"><%= flash[:notice] %></div>
      <% end %>
      <div class="input-field">
        <%= f.text_field :title %>
        <%= f.label :title %>
      </div>

      <div class="input-field">
        <%= f.text_field :image_url %>
        <%= f.label :image_url %>
      </div>

      <div class="input-field">
        <%= f.text_field :video_url %>
        <%= f.label :video_url, value: "Youtube Video Url" %>
      </div>

      <div class="input-field">
        <%= f.text_area :content, class: "materialize-textarea" %>
        <%= f.label :content %>
      </div>

      <%= f.hidden_field :topic_id %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit "Submit", class: "btn indigo"%>
    <% end %>
  </div>
</div>